<head>
	<style type="text/css">
		body {
			font-size: 10pt;
			background: #eee;
			font-family: Arial, Helvetica, sans-serif;
		}
		h1 {
			font-size: 1.5rem;
			color: #555;
		}
		h2 {
			font-size: 1.2rem;
			color: #555;
		}
		.left-side { }
		.search {
			margin: 3rem 0;
		}
		.result { }
	</style>
</head>
<body>
	<div class="left-side">
		<h1>This web app was built with RUST, rocket and diesel</h1>
		<h2>Hello {{name}} {{surname}}</h2>
	</div>
	<div class="login">
		<form action="/api/login" method="post">
			<label for="username">Login:</label> <input type="text" id="username" name="username" placeholder="username" /> <input type="password" id="password" name="password"  placeholder="password" />
			<button type="submit">Login</button>
		</form>
	</div>
	<div class="search">
		<form action="/api/search" method="post">
			<label for="search">Search:</label> <input type="text" id="search" name="search" placeholder="search" />
			<button type="submit">Search</button>
		</form>
	</div>
	<div class="result">
	</div>
</body>
